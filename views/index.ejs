<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1><%= title %></h1>

    <div class="messages">
      <% messages.forEach(function(message){ %>
        <div class="message">
          <p><strong><%= message.user %></strong></p>
          <p><%= message.text %></p>
          <small><%= message.added.toLocaleString() %></small>
          <div class="message-actions">
            <a href="/edit/<%= message.id %>" class="open-message">Open</a>
            <form method="POST" action="/delete/<%= message.id %>" class="delete-form">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </div>
        </div>
      <% }); %>
    </div>

    <div class="new-message-link-container">
      <a href="/new" class="new-message-link">+ Add a new message</a>
    </div>
  </div>
</body>
<footer>
  <p>Developed by Dr. Kato Samuel Namuene</p>
  <p>Email: kato.namuene@ubuea.cm</p> 
</footer>
</html>
